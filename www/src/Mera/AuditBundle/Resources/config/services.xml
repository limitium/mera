<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="mera.audit.common_update_listener.class">Mera\AuditBundle\Listener\CommonUpdateListener</parameter>
    </parameters>

    <services>
        <service id="mera.audit.common_update_listener" class="%mera.audit.common_update_listener.class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <tag name="kernel.event_listener" event="audit.common_update" method="onCommonUpdate"/>
        </service>
    </services>
</container>
