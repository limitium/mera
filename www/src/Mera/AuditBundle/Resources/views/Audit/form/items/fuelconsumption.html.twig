{% extends 'MeraAuditBundle:Audit:form/fields.html.twig' %}
{% block collapseTitle %}
    Сведения по балансу моторного топлива и его изменениях за отчетный год
{% endblock %}
{% block collapseId %}fuelconsupmtion{% endblock %}
{% form_theme form _self %}
{% block collapseBody %}
    <blockquote>
        <p class="lead">Какой-то текст</p>
    </blockquote>
    {{ form_widget(form.FuelConsumptions) }}
{% endblock %}

{% block collection_row_inner %}
    <div class="row">
        {{ form_row(fields.type,{"attr":{"exclass":"span3", "class":"input-large" }}) }}
        {{ form_row(fields.work_duration,{"attr":{"exclass":"span3", "class":"input-large" }}) }}
        {{ form_row(fields.passengers,{"attr":{"exclass":"span3", "class":"input-large" }}) }}
        {{ form_row(fields.consumption,{"attr":{"exclass":"span3", "class":"input-large" }}) }}

        {{ form_row(fields.quantity,{"attr":{"exclass":"span3", "class":"input-large" }}) }}
        {{ form_row(fields.load_capacity,{"attr":{"exclass":"span3", "class":"input-large" }}) }}
        {{ form_row(fields.total_consumed,{"attr":{"exclass":"span3", "class":"input-large" }}) }}
        {{ form_row(fields.FuelType,{"attr":{"exclass":"span3", "class":"input-large" }}) }}
    </div>
{% endblock collection_row_inner %}