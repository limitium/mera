{% extends 'MeraPostBundle:PostOffice:post.html.twig' %}
{% block post %}

    <h1>Почтовые отделения</h1>


    <div class="btn-toolbar">
        <div class="btn-group">
            <a class="btn" href="{{ path('postoffice_new') }}"><i class="icon-plus"></i> Добавить</a>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Название</th>
            <th>Email</th>
            <th>Создан</th>
            <th>Изменен</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('postoffice_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.email }}</td>
                <td></td>
                <td></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}