{% extends 'MeraManageBundle::layout.html.twig' %}
{% block body %}
    <h2>Добавить организацию</h2>
    <div class="btn-toolbar">
        <div class="btn-group">
            <a class="btn" href="{{ path('organization') }}"><i class="icon-th-list"></i> К
                списку</a>
        </div>
    </div>
    <form action="{{ path('organization_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <p>
            <button class="btn btn-info" type="submit"><i class="icon-ok icon-white"></i> Создать</button>
        </p>
    </form>

{% endblock %}