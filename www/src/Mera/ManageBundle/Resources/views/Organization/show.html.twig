{% extends 'MeraManageBundle::layout.html.twig' %}
{% block body %}
    <h2>Организация ({{ entity.name }})</h2>

    <div class="btn-toolbar">
        <div class="btn-group">
            <a class="btn" href="{{ path('organization') }}"><i class="icon-th-list"></i> К
                списку</a>
            <a class="btn" href="{{ path('organization_edit', { 'id': entity.id }) }}"><i class="icon-edit""></i>
                Редактировать</a>
            <a class="btn" href="{{ path('organization_delete', { 'id': entity.id }) }}"><i class="icon-trash""></i>
                Удалить</a>
        </div>
    </div>

    <div>
        <dl class="dl-horizontal">
                <dt>Адрес:</dt>
                <dd>{{ entity.address}}</dd>
                <dt>Руководитель:</dt>
                <dd>{{ entity.leadName }} / {{ entity.leadPosition }}</dd>
        </dl>
    </div>
{% endblock %}