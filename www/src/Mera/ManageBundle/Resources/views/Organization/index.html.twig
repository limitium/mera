{% extends 'MeraManageBundle::layout.html.twig' %}
{% block body %}

    <h2>Организации</h2>


    <div class="btn-toolbar">
        <div class="btn-group">
            <a class="btn" href="{{ path('organization_new') }}"><i class="icon-plus"></i> Добавить</a>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
        <tr>

            <th>Название</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('organization_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}